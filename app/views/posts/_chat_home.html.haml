.chat_message{data: {id: post.id}}
  .chat-member
    = post.user.name
  .chat-time
    = post.created_at.strftime("%Y/%m/%d %H:%M")
  .chat-comment
    - if post.body.present?
      %p.lower-post__body
        = post.body
    = image_tag post.image, class: 'lower-message__image' if post.image.present?